<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/nav_drawer_width"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_headnav_ava"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/codelabs"/>
    <TextView
        android:id="@+id/txt_headnav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayu F.P."
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_headnav_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sample@email.com"
        android:textColor="@color/textColorPrimary"
        android:textSize="15dp"/>
</LinearLayout>